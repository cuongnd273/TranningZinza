<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_product"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
             />
        <ImageView
            android:id="@+id/image_favorite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:src="@drawable/heart_outline"
            android:padding="10dp"
            android:scaleType="centerCrop"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T-shirt"
        android:textColor="#e1221c"
        android:layout_marginLeft="10dp"
        android:id="@+id/name_product"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/price_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs: 1,599"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/price_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs: 1,899"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="#414641"
            android:background="@drawable/custom_price_old"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/price_new"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="20%"
            android:textColor="#FFF"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_bg_sale"
            android:gravity="center"
            android:id="@+id/sale"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>
